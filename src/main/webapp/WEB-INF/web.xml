<!--<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >-->

<web-app>
    <display-name>ToDo List</display-name>

    <servlet>
        <servlet-name>CreateTask</servlet-name>
        <servlet-class>com.goit.gojavaonline.todolist.CreateTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTask</servlet-name>
        <servlet-class>com.goit.gojavaonline.todolist.DeleteTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTask</servlet-name>
        <servlet-class>com.goit.gojavaonline.todolist.UpdateTaskServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateTask</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteTask</servlet-name>
        <url-pattern>/deleteTask</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateTask</servlet-name>
        <url-pattern>/updateTask</url-pattern>
    </servlet-mapping>
</web-app>
